{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/rviseui-*/src",
    "./types",
    "./scripts",
    "./configuration",
    "./configuration/types",
    "./tests",
    "src/rviseui-notifications/src/Notifications.story.tsx"
  ],
  "exclude": [
    "public",
    ".cache",
    "configuration/jest",
    "configuration/storybook/main.js",
    "node_modules",
    "src/rviseui-*/esm/**/*",
    "src/rviseui-*/lib/**/*",
    "src/rviseui-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@rviseui/*": ["src/rviseui-*/src"]
    }
  }
}
